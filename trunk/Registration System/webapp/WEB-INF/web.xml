<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>PictureViewer</display-name>

  <!-- Declare the existence of a servlet. -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>LoginServlet</servlet-class>
  </servlet>

  <!-- Map URLs to that servlet. -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-class>AccountServlet</servlet-class>
  	<servlet-name>AccountServlet</servlet-name></servlet>
  <servlet-mapping>
  	<servlet-name>AccountServlet</servlet-name>
  	<url-pattern>/account/*</url-pattern></servlet-mapping>
</web-app>
